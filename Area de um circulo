#include <iostream>
#include <cmath> // Para M_PI

int main() {
    float raio, area;
    
    std::cout << "Digite o raio do círculo: ";
    std::cin >> raio;
    
    area = M_PI * raio * raio; // M_PI é uma constante que representa o valor de π
    
    std::cout << "A área do círculo é: " << area << std::endl;
    return 0;
}
