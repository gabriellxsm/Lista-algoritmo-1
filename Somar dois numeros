#include <iostream>

int main() {
    float num1, num2, soma;
    
    std::cout << "Digite o primeiro número: ";
    std::cin >> num1;
    
    std::cout << "Digite o segundo número: ";
    std::cin >> num2;
    
    soma = num1 + num2;
    
    std::cout << "A soma dos números é: " << soma << std::endl;
    return 0;
}
